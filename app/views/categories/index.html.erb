<%= stylesheet_link_tag "categories" %>

<h1>Categories</h1>

<p id="notice"><%= notice %></p>
<button type="button" name="button"><%= link_to 'создать', new_category_path %></button>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Display in navbar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.display_in_navbar %></td>
        <td><button type="button" name="button" class="image_button"><%= link_to 'Открыть', category %></button></td>

        <td><button type="button" name="button" class="image_button"><%= link_to image_tag("edit.svg"), edit_category_path(category) %></button></td>
        <td><button type="button" name="button" class="image_button"><%= link_to image_tag("delete.svg"), category, method: :delete, data: { confirm: 'Удалить?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button type="button" name="button"><%= link_to 'Назад', posts_path %></button>
