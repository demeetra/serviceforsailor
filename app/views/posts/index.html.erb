<%= stylesheet_link_tag "posts" %>
<p id="notice"><%= notice %></p>

<h1>Записи на форуме</h1>

<button type="button" name="button">
<%= link_to 'Новая запись', new_post_path %>
</button>

<table>
  <thead>
    <tr>
      <th>Автор</th>
      <th>Тема</th>
      <th>Заголовок</th>
      <!-- <th>Контент</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.tag %></td>
        <td><%= post.title %></td>
        <!-- <td><%= post.content %></td> -->
        <td><button type="button" name="button"><%= link_to 'Показать', post %></button></td>
        <td><button type="button" name="button"><%= link_to 'Редактировать', edit_post_path(post) %></button></td>
        <td><button type="button" name="button"><%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Удалить?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button type="button" name="button"><%= link_to 'О проекте', about_path %></button>
